<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="NavigationBar_Header" parent="ThemeOverlay.AppCompat.Dark">

        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
    </style>
    <declare-styleable name="DigitalClock">
        <attr name="digital_clock_text_size" format="dimension"></attr>
        <attr name="digital_clock_text_color" format="color"></attr>
    </declare-styleable>
    <declare-styleable name="TimePicker">
        <attr name="timePicker_line_width" format="dimension"></attr>
        <attr name="timePicker_unSelect_color" format="color"></attr>
        <attr name="timePicker_Selected_color" format="color"></attr>
        <attr name="timePicker_cursor_color" format="color"></attr>
        <attr name="timePicker_cursor_end_color" format="color"></attr>
    </declare-styleable>
</resources>
